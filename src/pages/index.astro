---
import Layout from '@/layouts/Layout.astro';
import '../styles/global.css';
import { Header } from '@/components/Header';
import About from '@/components/about/About.astro';
import Banner from '@/components/about/Banner.astro';
import Experience from '@/components/about/Experience.astro';
import Projects from '@/components/about/Projects.astro';
import Skills from '@/components/about/Skills.astro';
import Footer from '@/components/Footer.astro';
import Contact from '@/components/about/Contact.astro';
---

<Layout>
  <Header client:load />
  <main class="flex flex-col items-center gap-10">
    <About />
    <Skills />
    <Projects />
    <Experience />
    <Banner />
    <Contact />
  </main>
  <Footer />
</Layout>
