---
import ContactLinks from './about/ContactLinks';
import { headerLinks } from '../assets/data/headerLinks';
---

<footer class="flex flex-col gap-10 mt-20 bg-blue-600 p-10">
  <p class="text-3xl font-bold text-center text-white">Reynaldo Molina</p>
  <div class="flex flex-col items-center md:justify-center md:flex-row gap-5">
    {
      headerLinks.map((link) => (
        <a
          href={link.link}
          class="font-semibold text-center transition text-xl duration-150 text-white hover:text-orange-200 w-fit"
        >
          {link.name}
        </a>
      ))
    }
  </div>

  <ContactLinks />
</footer>
